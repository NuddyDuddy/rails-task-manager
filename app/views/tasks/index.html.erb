<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id)%>

<%= link_to "Edit a task", edit_task_path(task.id) %>
<%= link_to "Delete", task_path(task.id),
 data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
  <% end %>
</ul>

<%= link_to "Add new task", new_task_path %>
